<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EBF1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/layer_list_order">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="清空"
            android:textColor="#000"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/message"
            android:layout_width="217dp"
            android:layout_height="217dp"
            android:src="@drawable/pic_default_no_message"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/message_login_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:text="登录后才能查看您的消息哦"
            android:layout_centerHorizontal="true"
            android:textColor="#000"/>

        <Button
            android:id="@+id/message_jump_login"
            android:layout_width="118dp"
            android:layout_height="47dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/message_login_hint"
            android:text="登录"
            android:textColor="#3483EE"
            android:background="@drawable/shape_immed"/>

    </RelativeLayout>


</RelativeLayout>