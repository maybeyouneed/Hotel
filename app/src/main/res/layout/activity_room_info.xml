<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/book_room"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="立即预订"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 图片滚动 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="visible"
                    custom:pager_animation="Accordion"
                    custom:pager_animation_span="1100"/>
                </RelativeLayout>

            <!-- 房间名 -->
            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="#222222"
                android:gravity="center_vertical"/>

            <!-- 价格 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="bottom"
                android:minHeight="25dp"
                android:orientation="horizontal"
                android:paddingRight="12dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#ec0f38"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="288/晚"
                    android:textColor="#ec0f38"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#e8ebf1" />

            <!-- 房间信息 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/strut"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/strut"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/ic_room"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_room"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间信息"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/ic_room"
                        android:layout_alignBottom="@+id/ic_room"/>

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积：30.0平米"
                        android:textSize="11sp"
                        android:layout_below="@+id/ic_room"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户型：1卧室1卫"
                        android:textSize="11sp"
                        android:layout_below="@+id/tv_area"
                        android:layout_marginLeft="25dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/strut"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/ic_location"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_room_position"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间位置"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/ic_location"
                        android:layout_alignBottom="@+id/ic_location"/>

                    <TextView
                        android:id="@+id/tv_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="楼层：13楼"
                        android:textSize="11sp"
                        android:layout_below="@+id/ic_location"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房号：梨园天际13楼A1318"
                        android:textSize="11sp"
                        android:layout_below="@+id/tv_floor"
                        android:layout_marginLeft="25dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/strut"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/ic_person"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_room_person"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宜住人数"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/ic_person"
                        android:layout_alignBottom="@+id/ic_person"/>

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2人"
                        android:textSize="11sp"
                        android:layout_below="@+id/ic_person"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/strut"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/ic_bed"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_bed"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/tv_bed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间位置"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/ic_bed"
                        android:layout_alignBottom="@+id/ic_bed"/>

                    <TextView
                        android:id="@+id/tv_bed_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="楼层：13楼"
                        android:textSize="11sp"
                        android:layout_below="@+id/ic_bed"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="25dp"/>

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#e8ebf1" />

            <!-- 特别提醒 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="特别提醒"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="一楼上行电梯在22：00之后关闭"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <View
                android:layout_height="2px"
                android:layout_width="match_parent"
                android:background="#e8ebf1" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
